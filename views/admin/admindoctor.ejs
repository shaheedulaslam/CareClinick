<%- include('../partials/headeradmin.ejs') %>
    <!-- /Page Header -->
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="text-primary text-center">Doctors Lists</h4>
                    <div class="new">
                        <a class="btn btn-md btn-success" href="/admin/adddoctors" style="justify-content:end;">Add Doctors</a>
                    </div>
                    <div class="table-responsive">
                        <br>
                        <table class="datatable table table-hover table-center mb-0">
                            <thead>
                                <tr>
                                    
                                    <th>Doctor's Name</th>
                                    <th>Specialities</th>
                                    <th>Qualifiactions</th>
                                    <th>Earned</th>
                                    <th>Account Status</th>

                                </tr>
                            </thead>
                            <tbody>
                                <%doctorslist.forEach(el=>{%>
                                <tr>
                                    <td>
                                        <h2 class="table-avatar" style="font-size:large;"><%= el.name%></h2>
                                    </td>
                                    <td><%= el.speciality%></td>

                                    <td><%= el.qualification%></td>

                                    <td> â‚¹.<%= el.wallet%></td>

                                    <td>
                                        <div class="status-toggle">
                                            
                                                <a class="btn btn-md btn-success" href="/admin/activedoctor/<%=el._id %>" onclick="return activebtn()">Active</a>
                                           
                                            <a class="btn btn-md btn-danger" href="/admin/nonactivedoctor/<%= el._id %> " onclick="return nonactivebtn()">NonActive</a>
                                           
                                        </div>
                                    </td>
                                </tr>
                                <%}) %> 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>
    </div>
    <script>
        function activebtn(){
            alert('Want to Active this Doctor ?');
        }
        function nonactivebtn(){
            alert('Want to deActivate this Doctor ?');
        }
    </script>
