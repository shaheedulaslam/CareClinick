<!-- Spinner Start -->
<div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
    <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
<!-- Spinner End -->

<div class="wrapper">
    <div class="logo">
        <h1 class="text-center"><i class="far fa-hospital me-3"></i>Admin</h1>
    </div>
    <form class="p-3 mt-3" action="/admin/adminlogin" method="post">
        <%if(errmessage){%>
            <p class="text-danger" id="note">Invalid Email Or Password</p>
            <% }else{%>
                <p></p> 
                <%} %> 
                    <div class="form-field d-flex align-items-center">
                        <span class="far fa-user"></span>
                        <input type="email" name="email" id="mail" placeholder="Enter email" required>
                    </div>
                    <div class="form-field d-flex align-items-center">
                        <span class="fas fa-key"></span>
                        <input type="password" name="password" id="current-password" pattern="(?=.*[a-z]).{8,}$" placeholder="Password" required>
                    </div>
                    <label style="font-size:x-small" class="mb-5">(must include small letters(a-z),(8)characters)</label>
                    <p class="text-success" id="note1"></p>
                    <button class="btn mt-3" type="submit">Login</button>
    </form>
    <div class="text-center fs-6">
        <a href="#">Forget password?</a>
    </div>
</div>
