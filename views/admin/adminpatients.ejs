<%- include('../partials/headeradmin.ejs') %>

<!-- start  -->
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <h4 class="text-primary text-center">Patients Lists</h4>
                <div class="table-responsive">
                    <div class="table-responsive">
                    <table class="datatable table table-hover table-center mb-0">
                        <thead>
                            <tr>
                                <th>Patients Name</th>
                                <th>Age</th>
                                <th>Ph</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%patientlist.forEach(el=>{%>
                            <tr>
                                <td>
                                    <h5 class="fs-6"><%=el.name %></h5>
                                </td>
                                <td><%=el.Age %></td>
                                <td><%=el.ph %></td>
                                <td><%=el.email %></td>
                                <td>
                                <a class="btn btn-danger" href="/admin/deletepatient/<%=el._id%>"onclick="return deletebtn()">Delete</a>
                                </td> 
                               
                            </tr>
                            <%}) %> 
                         </tbody>
                    </table>
                </div>
                </div>
            </div>
        </div>
    </div>			
</div>
<script>
    function deletebtn(){
        alert('Are you sure Want to delete this Patient ?')
    }
    </script>
    

<!-- end -->